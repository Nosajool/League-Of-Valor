<!-- Header -->

<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <!-- Ternary operator op -->
    <% homeLink = signed_in? ? current_user : root_path %>
    <%= link_to "League of Valor", homeLink, id: "logo" %>


    <!-- Gives you 3 lines for the mobile menu -->
    <button class="navbar-toggle" data-toggle = "collapse" data-target = ".navHeaderCollapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>


    <!-- Navbar right side menu -->
    <div class="collapse navbar-collapse navHeaderCollapse">
      <ul class="nav navbar-nav navbar-right">


        <!-- Signed in -->
        <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Play <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Maps List",                maps_path %></li>
              <li><%= link_to "Challenge a Summoner",    '#' %></li>
              <li><%= link_to "Buff Holders",            buffs_path %></li>
              <li><%= link_to "Store",                   '#' %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Champions <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Active Roster",          roster_path %></li>
              <li><%= link_to "Assign Pros",            '#' %></li>
              <li><%= link_to "Bench",                 bench_path %></li>
              <li><%= link_to "Champion Base Stats",     champions_path %></li>
              <li><%= link_to "Challenger List",         challenger_list_path %></li>
              <li><%= link_to "Promotion Champion",      '#' %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Info <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Rules",                   '#' %></li>
              <li><%= link_to "FAQ",                     '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Users",                   users_path %></li>
              <li><%= link_to "View a Profile",          '#' %></li>
              <li><%= link_to "Updates",                 '#' %></li>
              <li><%= link_to "Statistics",              '#' %></li>
              <li><%= link_to "Recent Battles",          battle_logs_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Gem Rankings",            '#' %></li>
              <li><%= link_to "Champion Rankings",       champion_ranking_path %></li>
              <li><%= link_to "ELO Rankings",            '#' %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </li>
          <% if Rails.env.development? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Admin Spawn Champion", spawn_champion_path %></li>
                <li><%= link_to "Admin Spawn Challenger", spawn_challenger_path %></li>
              </ul>
            </li>
          <% end %>


        <!-- Not signed in -->
        <% else %>
          <li><%= link_to "Home",       root_path %></li>
          <li><%= link_to "Sign in",     signin_path %></li>
          <li><%= link_to "Sign up",    signup_path %></li>
          <li><%= link_to "Forums",     '#' %></li>
           <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">More <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "About",    about_path %></li>
              <li><%= link_to "Help",     help_path %></li>
              <li><%= link_to "Contact",  contact_path %></li>
            </ul>
          </li>
        <% end %>

        
      </ul>
    </div>


  </div> <!-- container -->
</div>
<!DOCTYPE html>
<html>

  <head>
    <title><%= full_title(yield(:title)) %></title>



    <!-- This is used for making the site be responsive to the device screen size -->
    <meta name="viewport" content="width=device-width, initial-scale=1">



    <!-- Rails linking of stylesheets, javascript, csrf meta tags -->
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    
    <!-- The IE9 code -->
    <%= render 'layouts/shim' %>
    
  </head>




  <body>

    <%= render 'layouts/header' %>


    <div class="container-fluid">
      <!-- Flash Error messages -->
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <div class="row">
        <% unless signed_in? %>
          <!-- Insert the Content for the non-signed in users -->
          <%= yield %>

        <% else %>
          <!-- For signed in users, they get to see the 3 columns with an auto jumbotron for the middle -->

          <!-- The Left Menu  -->
          <div class="col-sm-3 col-md-3 col-lg-2">
            <div class="mainArea sidebar">
             <%= render 'layouts/left' %>  
            </div>              
          </div>

          <!-- Center where the page content is -->
          <div class="col-sm-9 col-md-9 col-lg-10">
            <div class="mainArea">
                <%= yield %>
            </div>
          </div>

        <% end %>


      <!-- End of row -->
      </div>
    </div>

    <%= render 'layouts/footer' %>
  <!-- Add some break lines so that bottom image doesn't get cut off -->
  <br><br>


  <div class="container-fluid">
    <%= debug(params) if Rails.env.development? %>
  </div>
  </body>
</html>
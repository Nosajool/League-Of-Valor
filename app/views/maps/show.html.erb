<% provide(:title, @map.map_name) %>
<h1><%= @map.map_name %></h1>
<%= map_picture_for(@map.id) %>
<br><br>
<%= @map.description %>
<br><br><br>
<div class="text-center">
	You encountered a level 1 <%= @random_champ.name %>
	<br><br>
	<div class="champ_face_catch">
		<%= champ_img_square_table(@random_champ) %><br>
	</div>
	<br>
</div>
<br>
<div class="span12">
	<div class="map-champion-stats">
		Attack Damage: <%= @random_champ.attack_damage %><br>
		Armor: <%= @random_champ.armor %><br>
		Magic Resist: <%= @random_champ.magic_resist %><br>
		Range: <%= @random_champ.attack_range %><br>
		Role 1: <%= @random_champ.f_role %><br>
		Role 2: <%= @random_champ.s_role %>
	</div>
</div>

<br>
<%= form_tag url_for(:controller => 'maps', :action => 'catch'), :method => "post"  do %>
  	<%= hidden_field_tag(:champ_id, @random_champ.id) %>
	<%= submit_tag("Catch the #{@random_champ.name}", class: "btn btn-success") %>
<% end %>
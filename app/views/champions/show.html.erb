<% provide(:title, "##{@champion.id} #{@champion.table_champion.name}") %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= champ_img_splash(@champion) %>
        <%= @champion.table_champion.name %>
      </h1>
      <h2>
        <%= @champion.table_champion.title %>
      </h2>
    </section>
  </aside>
</div>
<ul>
  <li><%= link_to("Base Stats", champion_stat_path(@champion.table_champion.id)) %></li>
	<li>Level: <%= @champion.level %></li>
	<li>Experience: <%= @champion.experience %></li>
	<li>Owner: <%= link_to(@champion.user.username, @champion.user) %></li>
	<li>Health: <%= champ_hp(@champion) %></li>
	<li>Attack Damage: <%= champ_ad(@champion) %></li>
	<li>Armor: <%= champ_armor(@champion) %></li>
	<li>Magic Resist: <%= champ_mr(@champion) %></li>
	<li>Movespeed: <%= @champion.table_champion.movespeed %></li>
	<li>Attack Range: <%= @champion.table_champion.attack_range %></li>
  <% if Rails.env.development? %>
    <li>Skin Code: <%= @champion.skin %></li>
    <li>Active Skin: <%= @champion.active_skin %></li>
  <% end %>
</ul>
<%= (@champion.table_champion.lore).html_safe %>